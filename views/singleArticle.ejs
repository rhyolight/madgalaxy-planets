<!DOCTYPE html>
<html lang="en" class="<%=planetSpecificData.planet%>">
    <head>
        <%- include ./partials/head.ejs %>
        <link rel="canonical" href="<%=uri%>" />
    </head>
    <body>
        <div class="container">
            <%- include ./partials/navbar.ejs %>
            <div class="row">
                <div class="column col-sm-2"></div>
                <div id="articles" class="column col-sm-8 col-md-8 col-lg-8">
                    <div class="classic-blog">
                        <div class="post ">
                            <div class ="quick-look">
                                <h2 class="post-title"><%= data.title %></h2>
                                <div class="meta">
                                    <div class="post-id" style="display:none"><%=data._id%></div>
                                    <span class="date">Posted on <span class="displayDate"><%=data.displayDate%></span></span>
                                    <% if(data.author) { %>
                                    <span class="author">
                                    | Author:
                                    <a href="/search/?searchString=<%=data.author%>">
                                        <%=data.author%>
                                    </a>
                                    </span>
                                    <% } %>
                                    <span class="">| Source: <a href="<%= data.link %>">link</a></span>
                                    
                                    
                                </div>
                                <div class="tag-holder">
                                    <% for (tag in data.tags) { %>
                                        <div class="tag">
                                            <%=data.tags[tag]%>
                                        </div>
                                    <%}%>
                                </div>
                            </div>
                            <div class="in-depth">
                                <div
                                    class="addthis_toolbox addthis_default_style addthis_16x16_style"
                                    addthis:url="<%=data.link%>"
                                    addthis:title="<%=data.title%>"
                                    >
                                    <a class="addthis_button_facebook"></a>
                                    <a class="addthis_button_twitter"></a>
                                    <a class="addthis_button_google_plusone_share"></a>
                                    <a class="addthis_button_compact"></a><a class="addthis_counter addthis_bubble_style"></a>
                                </div>
                                <br/>
                                <div class="post-description"><%- data.content %></div>
                            </div>
                        </div>
                    </div>
                    
                </div>
            </div>
            <div class="footer-offset"></div>
        </div>
        <%- include ./partials/footer-scripts.ejs %>
    </body>
</html>